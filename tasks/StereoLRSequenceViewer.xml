<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Task>
	<!-- reference task information -->
	<Reference>
		<Author>
			<name>Dawid Kaczmarek</name>
			<link></link>
		</Author>
	
		<Description>
			<brief>Displays RGB and depth images generated from stereo sequence</brief>
			<full>Generate and displays depth map generated from stereo-images</full>
		</Description>
	</Reference>

	<!-- task definition -->
	<Subtasks>
		<Subtask name="Processing">
			<Executor name="ExecDisp" period="1">
				<Component name="NextImageTrigger" type="CvBasic:Trigger" priority="1" bump="0">
				</Component>
				<Component name="SequenceLeft" type="CvBasic:Sequence" priority="2" bump="0">
					<param name="sequence.directory">%[TASK_LOCATION]%/../data/bible_lr/</param>
					<param name="sequence.pattern">left_.*\.png</param>
					<param name="mode.loop">1</param>
					<param name="mode.triggered">1</param>						
				</Component>
				<Component name="SequenceRight" type="CvBasic:Sequence" priority="3" bump="0">
					<param name="sequence.directory">%[TASK_LOCATION]%/../data/bible_lr/</param>
					<param name="sequence.pattern">right_.*\.png</param>
					<param name="mode.loop">1</param>
					<param name="mode.triggered">1</param>					
				</Component>
				<Component name="CameraInfoLeft" type="CvCoreTypes:CameraInfoProvider" priority="4" bump="0">
					<param name="data_file">%[TASK_LOCATION]%/../data/velma-stereo/left.yml</param>
				</Component>
				<Component name="CameraInfoRight" type="CvCoreTypes:CameraInfoProvider" priority="5" bump="0">
					<param name="data_file">%[TASK_LOCATION]%/../data/velma-stereo/right.yml</param>
				</Component>
				<Component name="StereoEstimator" type="CvStereo:StereoEstimator" priority="6" bump="0">
					<param name="minDisparity">50</param>
					<param name="numberOfDisparities">320</param>
					<param name="uniquenessRatio">20</param>
					<param name="preFilterCap">25</param>
					<param name="speckleWindowSize">30</param>
				</Component>
				<Component name="DepthRainbow" type="CvStereo:DepthRainbow" priority="6" bump="0">
				</Component>

			</Executor>
			<Executor name="DisplayExec" period="1">
				<Component name="WindowRGB" type="CvBasic:CvWindow" priority="1" bump="0">
					<param name="count">1</param>
					<param name="title">RGB View</param>
				</Component>
				<Component name="WindowDepthMono" type="CvBasic:CvWindow" priority="2" bump="0">
					<param name="count">1</param>
					<param name="title">Mono Depth View</param>
				</Component>
				<Component name="WindowDepth" type="CvBasic:CvWindow" priority="3" bump="0">
					<param name="count">1</param>
					<param name="title">Rainbow Depth View</param>
				</Component>
			</Executor>
		</Subtask>	
	</Subtasks>
	
	<!-- pipes connecting datastreams -->
	<DataStreams>
		<Source name="NextImageTrigger.out_trigger">
			<sink>SequenceLeft.in_load_next_image_trigger</sink>
			<sink>SequenceRight.in_load_next_image_trigger</sink>
		</Source>
		<Source name="SequenceLeft.out_img">
			<sink>StereoEstimator.l_in_img</sink>
		</Source>
		<Source name="SequenceRight.out_img">
			<sink>StereoEstimator.r_in_img</sink>
		</Source>
		<Source name="CameraInfoLeft.out_camera_info">
			<sink>StereoEstimator.l_cam_info</sink>
		</Source>
		<Source name="CameraInfoRight.out_camera_info">
			<sink>StereoEstimator.r_cam_info</sink>
		</Source>
		<Source name="StereoEstimator.out_rgb_stereo">
			<sink>WindowRGB.in_img</sink>
		</Source>
		<Source name="StereoEstimator.out_depth_xyz">
			<sink>DepthRainbow.in_depth_mono</sink>
			<sink>WindowDepthMono.in_img</sink>
		</Source>
		<Source name="DepthRainbow.out_depth_rainbow">
			<sink>WindowDepth.in_img</sink>
		</Source>
	</DataStreams>
</Task>

